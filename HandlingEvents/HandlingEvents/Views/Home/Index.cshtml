    <script type="text/javascript">
        // Handle Events the old-fashioned way
        var button = document.getElementById('SubmitButton1');
        if (document.addEventListener) {    // Does the document supports the addEventListener?
            button.addEventListener('click', function () { alert('Clicked button - The old-fashioned way'); }, false);           // Adde addEventListener to the button for the click event

        }
        else { // Otherwise, how IE handles the event?
            button.attachEvent('onclick', function () { alert('Clicked IE button - The old-fashioned way'); });

        }
