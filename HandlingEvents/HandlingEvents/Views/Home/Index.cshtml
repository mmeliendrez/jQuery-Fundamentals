    <script type="text/javascript">
        $(document).ready(function () {
            WireEvents();
        });

        function WireEvents() {

            // Handle Click
            $('#SubmitButton3').click(function () {
                alert("Clicked button - the jQuery way!!");
            });

            $('#SubmitButton4').click(function () {
                var firstName = $('#FirstNameTextBox1').val();
                var lastName = $('#LastNameTextBox1').val();
                $('#DivOutput').text(firstName + ' ' + lastName);
            });

            // Handle Mouse

            $('#Div1').mouseenter(function () {
                Toggle(this);
                $(this).css('cursor', 'pointer');
            })
            .mouseleave(function () {
                Toggle($(this));
            });

            $('#Div2').mousemove(function (e) {
                $(this).text('X: ' + e.pageX + ' Y: ' + e.pageY);
            })
            .mouseup(function (e) {
                alert($(e.target).attr('id'));
            });

            //Handle Select
            $('#Select1').change(function () {
                alert($(this).val());
            });
            
        }

        function SubmitButton_Click() {
            alert("Clicked button - the traditional way");
        }

        function Toggle(div) {
            $(div).toggleClass('Highlight');
        }
   </script>
